
<h2 class="mt-3">New book</h2>

<%= form_with model: @book ,url: '/books',method: :post do |f| %>
  
  <div class="form-group">
    <%= f.label :Title %>
    <%= f.text_field :title %>
  </div>
  
  <div class="form-group">
    <%= f.label :Opinion %>
    <%= f.text_area :Opnion %>
  </div>
   
  <div class="form-group">
    <%= f.submit 'Create Book' %>
  </div>
  
<% end %>