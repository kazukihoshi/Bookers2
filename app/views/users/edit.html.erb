   <div class="container">
     <div class="row">
       <div class="col-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto"></div>
         <h2>User info</h2>
         <%= form_with model: @user do |f| %>
           <div class="form-group">
             <%= f.label :Name %>
             <%= f.text_field :name, {class: "form-control name", id: "user_name"} %>
           </div>
           <div class="form-group">
             <%= f.label :user_image %>
             <%= f.submit 'ファイルを選択' , {class: "form-control-file user_image", id: "user_profile_image"} %>
           </div>
           <div class="form-group">
             <%= f.label :Introduction %>
             <%= f.text_area :body, {class: "form-control introduction", id: "user_introduction"} %>
           </div>
           <div class="form-group">
             <%= f.submit 'Update User', {class: "btn btn-secondary"} %>
           </div>
     </div>
   </div>