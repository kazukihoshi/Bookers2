<div class="container px-5 px-sm-0">
  <div class="row">
    
    <%= render 'books/book', book: @book_new, user: @user %> 
        
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          
            <tr>
              <td>
                <%= link_to user_path(@book_user) do %>
                  <%= image_tag @user.get_profile_image(100,100) %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book_user), class: "book_user.id" do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td>
                <%= @book.body %>
              </td>
            </tr>

        </tbody>
      </table>
    </div>
  </div>
</div>
